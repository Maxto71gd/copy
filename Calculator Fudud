<!DOCTYPE html>
<html lang="so">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Button Taabasho</title>
    <h2>Tiro koob</h2>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        #tapButton {
            background-color: #4CAF50; /* Midabka button-ka */
            color: white;
            padding: 15px 32px;
            text-align: center;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #tapButton:disabled {
            background-color: #d3d3d3; /* Midabka marka button-ka disable gareeyo */
            cursor: not-allowed;
        }

        p {
            font-size: 18px;
            margin-top: 20px;
        }

        span {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <button id="tapButton" onclick="updateTap()">Taabo</button>
    <p>Tirada dadka taabtay: <span id="tapCount">0</span></p>

    <script>
        // Haddii tirada hore ee dadka taabtay horey u jirtey, ku soo celi
        let tapCount = localStorage.getItem("tapCount") ? parseInt(localStorage.getItem("tapCount")) : 0;
        document.getElementById("tapCount").innerText = tapCount;

        // Xisaabi taabashada
        function updateTap() {
            tapCount++; // Kordhi tirada dadka taabtay
            localStorage.setItem("tapCount", tapCount); // Keydi tirada si ay ugu sii jirto
            document.getElementById("tapCount").innerText = tapCount; // Soo bandhig tirada cusub
            
            // Markaad taabato, button-ka ka dhig mid aan la taaban karin
            document.getElementById("tapButton").disabled = true;
            
            // Si button-ka aan la taaban karin marka page-ka dib loo cusboonaysiiyo
            localStorage.setItem("buttonDisabled", "true");
        }

        // Marka bogga la cusboonaysiiyo, hubi haddii button-ka uu horay u ahaa disabled
        window.onload = function() {
            // Haddii button-ka horey uu disable gareeyay
            if(localStorage.getItem("buttonDisabled") === "true") {
                document.getElementById("tapButton").disabled = true;
            }
        };
    </script>

</body>
</html>
